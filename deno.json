{
  "license": "ISC",
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": ["./dist", "./public/css/tailwind.css"]
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-window-prefix",
        "no-window",
        "no-unused-vars"
      ]
    },
    "exclude": ["./dist", "./public/css/tailwind.css"]
  },
  "test": {
    "exclude": ["./dist"]
  },
  "lock": false,
  "nodeModulesDir": "auto"
}
